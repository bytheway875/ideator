<h1>Bitchfest</h1>





<% @ideas.each do |idea| %>
  <div class = "sassy">
   <h2> <%= idea.name %></h2>
    <br/>
    <p><%= idea.description %></p>
    <br/>
    <%= image_tag(idea.picture_url, :width => 100) if idea.picture.present? %>
    
    <div class = "controls">
<div class="btn-group btn-group-vertical">
  <button class="btn"><%= link_to 'Show', idea %></button>
  <button class="btn"><%= link_to 'Edit', edit_idea_path(idea) %></button>
  <button class="btn"><%= link_to 'Destroy', idea, method: :delete, data: { confirm: 'Are you sure?' } %></button>
</div>

    </div>
  
  </div>
<% end %>

<br />

<button class="btn"><%= link_to 'New Idea', new_idea_path %></button>
